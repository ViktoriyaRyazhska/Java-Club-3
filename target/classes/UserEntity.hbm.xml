<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="team1.entity.User" table="user" schema="library">
        <id name="id">
            <column name="id" sql-type="int unsigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(120)" length="120" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="dateOfBirth">
            <column name="date_of_birth" sql-type="date" not-null="true"/>
        </property>
        <property name="registrationDate">
            <column name="registration_date" sql-type="date" not-null="true"/>
        </property>
        <property name="roleId">
            <column name="role_id" sql-type="int unsigned"/>
        </property>
        <many-to-one name="roleByRoleId" class="team1.entity.Role">
            <column name="role_id"/>
        </many-to-one>
        <set name="requestsById" inverse="true">
            <key>
                <column name="user_id"/>
            </key>
            <one-to-many not-found="ignore" class="team1.entity.Request"/>
        </set>
    </class>
</hibernate-mapping>